# ltfserv environment — copy to .env and populate before starting
# RUNNER_PATH and SNOWSIGNALS_CONFIG_DIR are required — no defaults.

HTTP_PORT=3006
LOG_LEVEL=info

# Required: absolute path to compiled snowsignals runner binary
RUNNER_PATH=/path/to/snowSignals2026/model/target/release/runner

# Required: base directory containing snowsignals config (formulae, indicators, appSettings.toml)
SNOWSIGNALS_CONFIG_DIR=/path/to/snowSignals2026/model/config

DATASERV_SOCKET_PATH=/tmp/dataserv.sock

# Oracle service URL (direct internal port, not proxied through webserv)
ORACLE_URL=http://localhost:3003

# Per-timeframe formula overrides
FORMULA_15M=4h_SLOW_MOON
FORMULA_4H=4h_SLOW_MOON
FORMULA_1D=4h_SLOW_MOON
FORMULA_7D=4h_SLOW_MOON

WEBSERV_URL=http://localhost:3000
INTERNAL_API_KEY=changeme
